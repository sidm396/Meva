<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- view common to both template and product -->
  <record id="view_template_product_property_form" model="ir.ui.view">
    <field name="name">product.template.product.property.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <page name="inventory" position="inside">
          <group string="Description for Product">
            <field name="houzz_product_description"/>
          </group>
      </page>
    </field>
  </record>
</odoo>