<?xml version="1.0"?>
<odoo>
    <record id="action_houzz_config" model="ir.actions.act_window">
        <field name="name">Houzz Profile</field>
        <field name="res_model">houzz.config</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="action_houzz_import" model="ir.actions.act_window">
        <field name="name">Order Import</field>
        <field name="res_model">houzz.order.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

