        sequence="1" /> -->

    <!-- Menu Payments -->
    <menuitem id="houzz_payments"
        name="Payments"
        parent="menu_houzz"
        sequence="10"/>

    <menuitem id="houzz_payments_list" 
        action="action_houzz_payments"
        name="Payments List"
        parent="houzz_payments"
        sequence="13"/>

    <menuitem id="houzz_payments_import"
        action="action_houzz_payments_import"
        name="Payments Import"
        parent="houzz_payments"
        sequence="14"/>

    <!-- Menu Configuration -->
    <menuitem id="menu_houzz_config"
        name="Configuration"
        parent="menu_houzz"
        sequence="20" />

    <menuitem id="menu_houzz_config_setting"
        name="Configuration"
        parent="menu_houzz_config"
        action="action_houzz_config"
        sequence="30" />

</odoo>