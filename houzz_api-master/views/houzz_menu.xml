        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_houzz_payments_import" model="ir.actions.act_window">
        <field name="name">Payments Import</field>
        <field name="res_model">houzz.payments.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_houzz"
        name="HOUZZ API"
        sequence="10" />

    <!-- Orders Menu -->
