<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model='ir.ui.view' id='view_order_tree_houzz'>
    <field name="name">sale.order.tree.houzz</field>
    <field name="model">sale.order</field>
    <field eval="2" name="priority"/>
    <field name="arch" type="xml">
        <tree string="Sales Orders">
          <field name="message_needaction" invisible="1"/>
          <field name="houzz_config_id"/>
          <field name="client_order_ref" string="Houzz id"/>
          <field name="name" string="Order Number"/>
          <field name="date_order"/>
          <field name="partner_id"/>
          <field name="user_id" invisible="1"/>
          <field name="amount_total" sum="Total Tax Included" widget="monetary"/>
          <field name="currency_id" invisible="1"/>
          <field name="invoice_status" invisible="1"/>
          <field name="state" />
        </tree>
    </field>
  </record>

  <record id="houzz_order_list" model="ir.actions.act_window">
    <field name="name">HOUZZ Orders</field>
    <field name="res_model">sale.order</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_order_tree_houzz"/>
    <field name="domain">[('houzz_config_id', '!=', None)]</field>
  </record>

</odoo>

