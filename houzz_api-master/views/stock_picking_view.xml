<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="stock_view_picking_form_el" model="ir.ui.view">
	    <field name="name">stock.view_picking_form.el</field>
	    <field name="model">stock.picking</field>
	    <field name="inherit_id" ref="stock.view_picking_form"/>
	    <field name="arch" type="xml">
	      <xpath expr="//div[@name='button_box']" position="inside">
	        <button name="preview_shipping_label"
	                type="object"
	                class="oe_stat_button"
	                icon="fa-globe icon">
	          <div class="o_field_widget o_stat_info">
	              <span class="o_stat_text">Shipping</span>
	              <span class="o_stat_text">Label</span>
	          </div>
	        </button>
	        <button name="preview_packing_slip"
	                type="object"
	                class="oe_stat_button"
	                icon="fa-globe icon">
	          <div class="o_field_widget o_stat_info">
	              <span class="o_stat_text">Packing</span>
	              <span class="o_stat_text">Slip</span>
	          </div>
	        </button>
	      </xpath>
	    </field>
	  </record>
	</data>
</odoo>